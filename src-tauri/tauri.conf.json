{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "德邻盒子",
  "version": "0.1.1",
  "identifier": "com.ycloud.delin",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "德邻盒子 - DelinBox",
        "height": 600,
        "width": 800,
        "minHeight": 700,
        "minWidth": 360,
        "center": true,
        "backgroundThrottling": "throttle",
        "backgroundColor": "#00000000"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' ipc: http://ipc.localhost blob: https: http:",
        "img-src": "'self' asset: http://asset.localhost blob: data: https: http:",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'",
        "font-src": "'self' data:",
        "object-src": "'self' blob:",
        "media-src": "'self' blob: data:",
        "connect-src": "'self' ipc: http://ipc.localhost blob:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [],
    "android": {
      "versionCode": 1000,
      "minSdkVersion": 24
    },
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "installerIcon": "../src-tauri/icons/icon.ico",
        "languages": [
          "English",
          "SimpChinese"
        ]
      }
    }
  }
}