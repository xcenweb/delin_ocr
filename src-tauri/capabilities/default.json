{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "vnidrop-share:default",

    "fs:allow-stat",
    "fs:allow-read",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write",
    "fs:allow-write-file",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-appdata-meta-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/**" }
      ]
    },

    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$APPDATA/**" }
      ]
    }
  ]
}
